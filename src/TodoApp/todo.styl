.faded
	opacity 0.25

.ui-circle
	&:before
	&:after
		content ''
		tr 1
		position absolute
		background white
		width 70%
		height 70%
		left 5%
		bottom 5%
		border-radius 50%
	&:before
		width 80%
		height 80%
		background mesame
		left 5%
		bottom 5%

.ui-cross
	&:before
	&:after
		content ''
		background mesame
		tr 1
		position absolute
		width 90%
		height 10%
		left 5%
		bottom 53.5%
	&:before
		transform rotate(45deg)
	&:after
		transform rotate(-45deg)
.ui-checkmark
	&:before
	&:after
		content ''
		background satura
		tr 1
		position absolute
		width 90%
		height 10%
		left 5%
		bottom 53.5%
	&:before
		transform rotate(45deg)
		width 35%
		left 10%
	&:after
		transform rotate(-45deg)
		width 70%
		left 30%
		bottom 58.5%


